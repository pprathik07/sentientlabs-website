# .editorconfig for SentientLabs Website
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single
trim_trailing_whitespace = true

[*.{json,yml,yaml,md,html,css,scss,vue}]
indent_size = 2
trim_trailing_whitespace = false

[*.{xml,svg}]
indent_size = 2
trim_trailing_whitespace = false

[*.{py}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{jpg,jpeg,png,gif,webp,ico,svg}]
trim_trailing_whitespace = false
